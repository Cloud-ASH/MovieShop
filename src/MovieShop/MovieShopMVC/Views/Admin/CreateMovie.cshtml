@model ApplicationCore.Models.CreateMovieViewModel

@{
    ViewData["Title"] = "Create Movie";
}

<div class="container mt-4">
    <div class="row justify-content-center">
        <div class="col-lg-10">
            <div class="card shadow-lg">
                <div class="card-header bg-danger text-white">
                    <h2 class="mb-0"><i class="bi bi-film me-2"></i>Create New Movie</h2>
                </div>
                <div class="card-body">
                    @if (TempData["SuccessMessage"] != null)
                    {
                        <div class="alert alert-success alert-dismissible fade show" role="alert">
                            <i class="bi bi-check-circle me-2"></i>@TempData["SuccessMessage"]
                            <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
                        </div>
                    }

                    <form asp-action="CreateMovie" method="post">
                        <div asp-validation-summary="ModelOnly" class="alert alert-danger" role="alert"></div>

                        <!-- Basic Information -->
                        <h4 class="border-bottom pb-2 mb-3"><i class="bi bi-info-circle me-2"></i>Basic Information</h4>

                        <div class="row mb-3">
                            <div class="col-md-8">
                                <label asp-for="Title" class="form-label fw-bold">Title *</label>
                                <input asp-for="Title" class="form-control" placeholder="Enter movie title" required />
                                <span asp-validation-for="Title" class="text-danger"></span>
                            </div>
                            <div class="col-md-4">
                                <label asp-for="OriginalLanguage" class="form-label fw-bold">Language</label>
                                <input asp-for="OriginalLanguage" class="form-control" placeholder="e.g., en" />
                            </div>
                        </div>

                        <div class="mb-3">
                            <label asp-for="Overview" class="form-label fw-bold">Overview</label>
                            <textarea asp-for="Overview" class="form-control" rows="4" placeholder="Movie description..."></textarea>
                        </div>

                        <div class="mb-3">
                            <label asp-for="TagLine" class="form-label fw-bold">Tagline</label>
                            <input asp-for="TagLine" class="form-control" placeholder="Catchy tagline..." />
                        </div>

                        <!-- Genres Selection -->
                        <div class="mb-3">
                            <label class="form-label fw-bold">Genres *</label>
                            <div class="border rounded p-3" style="max-height: 200px; overflow-y: auto; background-color: #f8f9fa;">
                                <div class="row">
                                    @if (ViewBag.Genres != null)
                                    {
                                        @foreach (var genre in ViewBag.Genres)
                                        {
                                            <div class="col-md-6 mb-2">
                                                <div class="form-check">
                                                    <input class="form-check-input" 
                                                           type="checkbox" 
                                                           name="SelectedGenreIds" 
                                                           value="@genre.Id" 
                                                           id="genre_@genre.Id"
                                                           @(Model?.SelectedGenreIds?.Contains(genre.Id) == true ? "checked" : "")>
                                                    <label class="form-check-label" for="genre_@genre.Id">
                                                        @genre.Name
                                                    </label>
                                                </div>
                                            </div>
                                        }
                                    }
                                </div>
                            </div>
                            <small class="text-muted">Select one or more genres for this movie</small>
                        </div>

                        <!-- Financial Information -->
                        <h4 class="border-bottom pb-2 mb-3 mt-4"><i class="bi bi-currency-dollar me-2"></i>Financial Information</h4>

                        <div class="row mb-3">
                            <div class="col-md-4">
                                <label asp-for="Budget" class="form-label fw-bold">Budget ($)</label>
                                <input asp-for="Budget" type="number" step="0.01" class="form-control" placeholder="0.00" />
                            </div>
                            <div class="col-md-4">
                                <label asp-for="Revenue" class="form-label fw-bold">Revenue ($)</label>
                                <input asp-for="Revenue" type="number" step="0.01" class="form-control" placeholder="0.00" />
                            </div>
                            <div class="col-md-4">
                                <label asp-for="Price" class="form-label fw-bold">Price ($)</label>
                                <input asp-for="Price" type="number" step="0.01" class="form-control" placeholder="9.99" />
                            </div>
                        </div>

                        <!-- Release Information -->
                        <h4 class="border-bottom pb-2 mb-3 mt-4"><i class="bi bi-calendar-event me-2"></i>Release Information</h4>

                        <div class="row mb-3">
                            <div class="col-md-6">
                                <label asp-for="ReleaseDate" class="form-label fw-bold">Release Date</label>
                                <input asp-for="ReleaseDate" type="date" class="form-control" />
                            </div>
                            <div class="col-md-6">
                                <label asp-for="RunTime" class="form-label fw-bold">Runtime (minutes)</label>
                                <input asp-for="RunTime" type="number" class="form-control" placeholder="120" />
                            </div>
                        </div>

                        <!-- Media URLs -->
                        <h4 class="border-bottom pb-2 mb-3 mt-4"><i class="bi bi-image me-2"></i>Media & Links</h4>

                        <div class="mb-3">
                            <label asp-for="PosterUrl" class="form-label fw-bold">Poster URL</label>
                            <input asp-for="PosterUrl" class="form-control" placeholder="https://..." />
                        </div>

                        <div class="mb-3">
                            <label asp-for="BackdropUrl" class="form-label fw-bold">Backdrop URL</label>
                            <input asp-for="BackdropUrl" class="form-control" placeholder="https://..." />
                        </div>

                        <div class="row mb-3">
                            <div class="col-md-6">
                                <label asp-for="ImdbURL" class="form-label fw-bold">IMDB URL</label>
                                <input asp-for="ImdbURL" class="form-control" placeholder="https://imdb.com/..." />
                            </div>
                            <div class="col-md-6">
                                <label asp-for="TmdbUrl" class="form-label fw-bold">TMDB URL</label>
                                <input asp-for="TmdbUrl" class="form-control" placeholder="https://themoviedb.org/..." />
                            </div>
                        </div>

                        <!-- Action Buttons -->
                        <div class="d-flex gap-3 mt-4">
                            <button type="submit" class="btn btn-danger btn-lg rounded-pill px-5">
                                <i class="bi bi-plus-circle me-2"></i>Create Movie
                            </button>
                            <a asp-controller="Home" asp-action="Index" class="btn btn-outline-secondary btn-lg rounded-pill px-5">
                                <i class="bi bi-x-circle me-2"></i>Cancel
                            </a>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}

<style>
    .card {
        border-radius: 15px;
        border: none;
    }

    .card-header {
        border-radius: 15px 15px 0 0 !important;
        padding: 1.5rem;
    }

    .form-label.fw-bold {
        color: #333;
    }

    h4 {
        color: #dc3545;
        font-weight: 600;
    }

    .form-control:focus {
        border-color: #dc3545;
        box-shadow: 0 0 0 0.2rem rgba(220, 53, 69, 0.25);
    }
</style>
